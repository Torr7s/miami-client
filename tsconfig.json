{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "baseUrl": "./src",
    "rootDir": "./src",
    "outDir": "./dist",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "paths": {
      "@config/*": [
        "config/*"
      ],
      "@controllers/*": [
        "controllers/*"
      ],
      "@helpers/*": [
        "helpers/*"
      ],
      "@shared/*": [
        "shared/*"
      ],
      "@subcmds/*": [
        "subCommands/*"
      ],
      "@structures/*": [
        "structures/*"
      ]
    },
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": false,
    "typeRoots": [
      "src/@types",
      "node_modules/@types"
    ],
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true
  },
}